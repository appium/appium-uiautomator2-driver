    "automated testing",
    "android"
  ],
  "version": "0.7.1",
  "author": "appium",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/appium/appium-uiautomator2-driver.git"
  },
  "bugs": {
    "url": "https://github.com/appium/appium-uiautomator2-driver/issues"
  },
  "engines": [
    "node"
  ],
  "main": "./build/index.js",
  "bin": {},
  "directories": {
    "lib": "lib"
  },
  "dependencies": {
    "adbkit": "^2.4.1",
    "appium-adb": "^4.0.0",
    "appium-android-driver": "^1.27.1",
    "appium-base-driver": "^2.0.18",
    "appium-support": "^2.5.0",
    "appium-uiautomator2-server": "0.x",
    "asyncbox": "^2.3.1",
    "babel-runtime": "=5.8.24",
    "bluebird": "^2.10.2",
    "lodash": "^3.10.1",
    "portscanner": "2.1.1",
    "request": "^2.81.0",
    "request-promise": "^4.1.1",
    "source-map-support": "^0.3.2",
    "teen_process": "^1.3.1",
    "utf7": "^1.0.0",
    "yargs": "^8.0.2"
  },
  "scripts": {
    "prepublish": "rimraf build && gulp prepublish",
    "install": "node ./bin/install.js",
    "transpile": "gulp transpile",
    "build": "gulp transpile",
    "test": "gulp once",
    "watch": "gulp watch",
    "mocha": "mocha",
    "coverage": "gulp coveralls",
    "lint": "gulp eslint",
    "precommit-msg": "echo 'Pre-commit checks...' && exit 0",
    "e2e": "gulp transpile && mocha -t 640000 -R spec build/test/functional/helpers/mocha-scripts.js build/test/functional/**/*-specs.js build/test/functional/*-specs.js",
    "e2e:testobject": "cross-env TESTOBJECT_E2E_TESTS=true npm run e2e"
  },
  "pre-commit": [
    "precommit-msg",
    "test"
  ],
  "devDependencies": {
    "android-apidemos": "^2.1.2",
    "appium-gulp-plugins": "^2.1.4",
    "appium-test-support": "^0.6.0",
    "babel-eslint": "^7.1.1",
    "chai": "^4.1.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^3.10.2",
    "eslint-config-appium": "^2.0.1",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-mocha": "^4.7.0",
    "eslint-plugin-promise": "^3.3.1",
    "gps-demo-app": "^1.0.0",
    "gulp": "^3.9.0",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.6.1",
    "sinon": "^1.17.2",
    "unzip": "^0.1.11",
    "wd": "^1.4.0",
    "xmldom": "^0.1.19",
    "xpath": "^0.0.22"
  }
